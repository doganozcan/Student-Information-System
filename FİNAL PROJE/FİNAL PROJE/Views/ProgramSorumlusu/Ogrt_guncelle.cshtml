@model FİNAL_PROJE.Models.Tables.ogretmen
@using FİNAL_PROJE.EKLENTİ
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Admin Sistemi</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th class="col-md-1" scope="col">Adı</th>
                    <th class="col-md-1" scope="col">Soyadı</th>
                    <th class="col-md-1" scope="col">Verdiği Ders</th>
                    <th class="col-md-1" scope="col">ID ders</th>
                    <th class="col-md-1" scope="col">Telefon</th>
                    <th class="col-md-1" scope="col">E-Posta</th>
                </tr>
            </thead>
            <tbody>
            <td>@Html.TextBoxFor(x => x.ad, new { @class = "form-control", placeholder = "Ad", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.soyad, new { @class = "form-control", placeholder = "Soyad", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.verdigidersadi, new { @class = "form-control", placeholder = "Verdiği Ders", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.ID_ders, new { @class = "form-control", placeholder = "ID Ders", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.telefon, new { @class = "form-control", placeholder = "Telefon", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.eposta, new { @class = "form-control", placeholder = "E-Posta", ari_describedy = "basic-addon1" })</td>
            </tbody>
        </table>

        @Html.Submit("Kaydet", new { @class = "btn  btn-succsess", style = "background-color:orange;margin-left:5px;width:100px" }) @(" ") @Html.ActionLink("Anasayfa", "Admin_anasayfa", "ProgramSorumlusu", new { @class = "link  link-succsess" })
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>

