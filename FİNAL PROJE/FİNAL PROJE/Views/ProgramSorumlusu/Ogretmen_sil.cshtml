
@{
    ViewBag.Title = "Ogretmen_sil";
    Layout = "~/Views/Share/_LayoutProgramSorumlusu.cshtml";
}


@model FİNAL_PROJE.Models.ViewModel

<div id="anasayfa" style="margin-top:-25px">

    <table class="table table-hover table-dark ">
        <thead>
            <tr>
                <th class="col-md-1" scope="col">Ders Kodu</th>
                <th class="col-md-1" scope="col">Ders Adı</th>
                <th class="col-md-1" scope="col">Kredi</th>
                <th class="col-md-1" scope="col">AKTS</th>
                <th class="col-md-1" scope="col">Sınıf</th>
                <th class="col-md-1" scope="col">Öğretim Elemanı</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ var i = 0;}

                @foreach (var a in Model.OgretmenListesi)
                {
                        <td>@(a.ad)</td>
                        <td>@(a.soyad)</td>
                        <td>@(a.verdigidersadi)</td>
                        <td>@(a.ogretmen_ID)</td>
                        <td>@(a.dersler.ders_donemi)</td>
                        <td>@(a.ID_ders)</td>
                        <td> @Html.ActionLink("Sil", "OgretmenSil", "ProgramSorumlusu", new { OgretmenID = a.ogretmen_ID }, new { @class = "btn btn-danger" })</td>
                        if (i == 0)
                        {
                        @:</tr><tr>
                        }
                }

            </tr>
        </tbody>
    </table>






</div>


