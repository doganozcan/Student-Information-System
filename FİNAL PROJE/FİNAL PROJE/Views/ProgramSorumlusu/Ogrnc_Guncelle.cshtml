@model FİNAL_PROJE.Models.Tables.ogrenci
@using FİNAL_PROJE.EKLENTİ
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Admin Sistemi</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th class="col-md-1" scope="col">Adı</th>
                    <th class="col-md-1" scope="col">Soyadı</th>
                    <th class="col-md-1" scope="col">Anne Adı</th>
                    <th class="col-md-1" scope="col">Baba Adı</th>
                    <th class="col-md-1" scope="col">Doğum Tarihi</th>
                    <th class="col-md-1" scope="col">Cinsiyet</th>
                    <th class="col-md-1" scope="col">Uyruk</th>
                    <th class="col-md-1" scope="col">T.C NO</th>
                </tr>
            </thead>
            <tbody>
            <td>@Html.TextBoxFor(x => x.ad, new { @class = "form-control", placeholder = "Ad", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.soyad, new { @class = "form-control", placeholder = "Soyad", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.anne_adi, new { @class = "form-control", placeholder = "Anne Adı", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.baba_adi, new { @class = "form-control", placeholder = "Baba Adı", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.dogumtarihi, new { @class = "form-control", placeholder = "Doğum Tarihi", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.cinsiyet, new { @class = "form-control", placeholder = "Cinsiyet", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.uyruk, new { @class = "form-control", placeholder = "Uyruk", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.tc, new { @class = "form-control", placeholder = "T.C NO", ari_describedy = "basic-addon1" })</td>
            </tbody>
        </table>

        @Html.Submit("Kaydet", new { @class = "btn  btn-succsess", style = "background-color:orange;margin-left:5px;width:100px" }) @(" ") @Html.ActionLink("Anasayfa","Admin_anasayfa","ProgramSorumlusu", new { @class = "link  link-succsess"})
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>

