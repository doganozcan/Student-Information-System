@model FİNAL_PROJE.Models.Tables.dersler
@using FİNAL_PROJE.EKLENTİ
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Admin Sistemi</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th class="col-md-1" scope="col">Ders Adı</th>
                    <th class="col-md-1" scope="col">Kredi</th>
                    <th class="col-md-1" scope="col">Ders Dönemi</th>
                    <th class="col-md-1" scope="col">AKTS</th>
                    <th class="col-md-1" scope="col">Der.A.Ögr.No</th>
                    <th class="col-md-1" scope="col">Der.V.Ogrt.No</th>
                </tr>
            </thead>
            <tbody>
            <td>@Html.TextBoxFor(x=>x.dersadi, new { @class = "form-control", placeholder = "Ders Ad", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.kredi, new { @class = "form-control", placeholder = "Kredi", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.ders_donemi, new { @class = "form-control", placeholder = "Ders Dönemi", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.akts, new { @class = "form-control", placeholder = "AKTS", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.ogrencino, new { @class = "form-control", placeholder = "Öğrenci No", ari_describedy = "basic-addon1" })</td>
            <td>@Html.TextBoxFor(x => x.ogretmen_ID, new { @class = "form-control", placeholder = "Öğretmen ID", ari_describedy = "basic-addon1" })</td>
            </tbody>
        </table>

        @Html.Submit("Kaydet", new { @class = "btn  btn-succsess", style = "background-color:orange;margin-left:5px;width:100px" }) @(" ") @Html.ActionLink("Anasayfa", "Admin_anasayfa", "ProgramSorumlusu", new { @class = "link  link-succsess" })
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>

