
@{
    ViewBag.Title = "OgrnciSil";
    Layout = "~/Views/Share/_LayoutProgramSorumlusu.cshtml";
}


@model FİNAL_PROJE.Models.ViewModel

<div id="anasayfa" style="margin-top:-25px">

    <table class="table table-hover table-dark ">
        <thead>
            <tr>
                <th class="col-md-1" scope="col">Öğrenci Numarası</th>
                <th class="col-md-1" scope="col">Adı</th>
                <th class="col-md-1" scope="col">Soyadı</th>
                <th class="col-md-1" scope="col">Anne Adı</th>
                <th class="col-md-1" scope="col">Baba Adı</th>
                <th class="col-md-1" scope="col">Doğum Tarihi</th>
                <th class="col-md-1" scope="col">Cinsiyet</th>
                <th class="col-md-1" scope="col">Uyruk</th>
                <th class="col-md-1" scope="col">T.C NO</th>
                <th class="col-md-1" scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ var i = 0;}

                @foreach (var a in Model.OgrenciListesi)
                {
                    <td>@(a.ogrencino)</td>

                    <td>@(a.ad)</td>

                    <td>@(a.soyad)</td>

                    <td>@( a.anne_adi)</td>

                    <td>@(a.baba_adi)</td>

                    <td>@(a.dogumtarihi)</td>

                    <td>@(a.cinsiyet)</td>

                    <td>@(a.uyruk)</td>

                    <td>@(a.tc)</td>

                    <td> @Html.ActionLink("Sil", "Ogrnci_Sil", "ProgramSorumlusu", new { OgrenciNo = a.ogrencino }, new { @class = "btn btn-danger" })</td>
                    if (i == 0)
                    {
                    @:</tr><tr>
                    }
                }

            </tr>
        </tbody>
    </table>






</div>

