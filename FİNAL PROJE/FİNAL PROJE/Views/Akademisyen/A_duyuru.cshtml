
@{
    Layout = "~/Views/Share/_LayoutAkademisyen.cshtml";
}

@model FİNAL_PROJE.Models.Tables.duyuru
@using FİNAL_PROJE.EKLENTİ
<div id="anasayfa">
    @using (Html.BeginForm())
    {
        <table class="table table-hover table-dark table-sm">
            <thead>
                <tr>
                    <th class="col-md-1" scope="col">Duyuru İçerik</th>
                    <th class="col-md-1" scope="col">Tarih</th>
                    <th class="col-md-1" scope="col">Öğretmen ID'niz</th>
                    <th class="col-md-1" scope="col">Baslik</th>
                    <th class="col-md-1" scope="col">ID Verilen Ders</th>
                    <th class="col-md-1" scope="col">ID Verilen Ders Tekrar Giriniz</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>  @Html.TextAreaFor(x => x.duyuruicerik, new { @class = "form-control ", placeholder = "Duyuru İçeriği", ari_describedy = "basic-addon1" })</td>
                    <td>  @Html.TextBoxFor(x => x.tarih, new { @class = "form-control ", placeholder = "Tarih", ari_describedy = "basic-addon1" })</td>
                    <td>  @Html.TextBoxFor(x => x.ogretmen_ID, new { @class = "form-control ", placeholder = "Öğretmen ID", ari_describedy = "basic-addon1" })</td>
                    <td>  @Html.TextBoxFor(x => x.baslik, new { @class = "form-control ", placeholder = "Baslik", ari_describedy = "basic-addon1" })</td>
                    <td>  @Html.TextBoxFor(x => x.ID_ders, new { @class = "form-control ", placeholder = "ID Ders", ari_describedy = "basic-addon1" })</td>
                    <td>  @Html.TextBoxFor(x => x.ID_alinandersler, new { @class = "form-control ", placeholder = "ID Verilen Ders", ari_describedy = "basic-addon1" })</td>
                </tr>
            </tbody>
        </table>

        <hr />
        @Html.Submit("KAYDET", new { @class = "btn  btn-light", style = "background-color:orange;margin-left:5px;width:100px" })
    }
    <br />
    <div id="gizle">
        <div>
            <button id="btnGizle" type="button" class="close" aria-label="Close" style="margin-left:1209px;background-color:#D1ECF1" ;>
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <p style="color:red"> LÜTFEN BİLGİLERİ DUYURU SAYFASINDAN BAKARAK DOĞRU GİRİNİZ</p>

        <script>
                var btnGizle = document.getElementById("btnGizle");
                btnGizle.onclick = function () {

                    //display özelliği none yapılarak gizleme işlemi yapılır.
                    document.getElementById("gizle").style.display = "none";

                }
        </script>
    </div>
</div>
