@model FİNAL_PROJE.Models.Tables.ogretmen
@using FİNAL_PROJE.EKLENTİ
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>Öğrenci Bilgi Sistemi</title>
    <link href="~/stiller/giris.css" rel="stylesheet" type="text/css" />
</head>
<body id="body">
    <section>
        <div class="site">

            <div id="logo">
                <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="58" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                    </svg>AKADEMİSYEN GİRİŞ 
                </p>
            </div>
            <div id="form">
                <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="55" fill="currentColor" class="bi bi-journal-text" viewBox="0 0 16 16">
                        <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z" />
                        <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z" />
                        <path fill-rule="evenodd" d="M5 10.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                    </svg>ÖZCAN KOLEJLERİ
                </p>

                <b>Kullanıcı adınızı ve şifrenizi girin</b>

                @using (Html.BeginForm())
                {
                    @Html.TextBoxFor(x=>x.Akullanici_adi, new { @class = "form-control ", placeholder = "Kullanıcı Adı", ari_describedy = "basic-addon1" })
                    @Html.TextBoxFor(x => x.Asifre, new { @class = "form-control ", placeholder = "Şifre", type = "password", ari_describedy = "basic-addon1" })
                    @Html.Submit("Giriş", new { @class = "btn  btn-light" })
                }
                <br />
                @if (ViewBag.hata != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.hata</div>
                }

            </div>
            <footer>
                <p>ÖZCAN KOLEJLERİ &copy;</p>
            </footer>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>